<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2197db"
    tools:context="com.julius.worksubmit.LoginActivity">

    <Button
        android:id="@+id/login_registerbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_loginbutton"
        android:layout_alignBottom="@+id/login_loginbutton"
        android:layout_alignEnd="@+id/login_forgetpasswordbutton"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="#3aadfd"
        android:text="注  册"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="用户登录"
        android:textColor="#fffefe"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_beautify1"
            android:hint="请输入账号"
            android:inputType="number" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_beautify1"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/login_loginbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_forgetpasswordbutton"
        android:layout_alignStart="@+id/login_remberPassword"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginStart="19dp"
        android:background="#3aadfd"
        android:text="登  录"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <Button
        android:id="@+id/login_forgetpasswordbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login_showPassword"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:text="忘记密码"
        android:textColor="#FF0000" />

    <CheckBox
        android:id="@+id/login_remberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="28dp"
        android:layout_toStartOf="@+id/loginbutton"
        android:text="记住密码" />

    <CheckBox
        android:id="@+id/login_showPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_remberPassword"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/loginbutton"
        android:text="显示密码" />
</RelativeLayout>
